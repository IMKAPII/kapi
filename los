        }

        body, body * {
            cursor: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="84" height="84" viewBox="0 0 64 64"><text y="50%" x="50%" font-size="48" text-anchor="middle" alignment-baseline="middle">游뿣</text></svg>') 32 32, auto !important;
        }

        #lotto-container {
            position: relative;
            width: 300px;
